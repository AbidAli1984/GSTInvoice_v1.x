@model GSTInvoiceData.Models.Address

<div class="col-md-6 col-sm-6">
    <div class="card card-topline-yellow">
        <div class="card-head">
            <header>Shipping Address</header>
            <i class="fa fa-arrow-down" aria-hidden="true"></i>
            <header style="text-transform:lowercase!important;" class="float-right"><a onclick="Copy()">Copy Billing Address</a></header>
        </div>
        <div class="card-body" id="bar-parent1">
            <div id="form_sample_1" class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Building
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ShippingBuilding, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Street
                        </label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.ShippingAddress, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            City
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ShippingCity, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            State
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ShippingState, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Pin Code
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ShippingPinCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Country
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.ShippingCountry, new SelectList(new[] { "Bangladesh", "Australia", "Canada" }), "India", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Fax
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ShippingFax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

