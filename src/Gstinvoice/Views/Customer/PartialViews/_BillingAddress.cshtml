@model GSTInvoiceData.Models.Address

<div class="col-md-6 col-sm-6">
    <div class="card card-topline-yellow">
        <div class="card-head">
            <header>Billing Address</header>
        </div>
        <div class="card-body" id="bar-parent1">

            <div id="form_sample_1" class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Building
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BillingBuilding, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Street
                        </label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.BillingAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            City
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BillingCity, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            State
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BillingState, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Pin Code
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BillingPinCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Country
                        </label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.BillingCountry, new SelectList(new[] { "Bangladesh", "Australia", "Canada" }), "India", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Fax
                        </label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BillingFax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

