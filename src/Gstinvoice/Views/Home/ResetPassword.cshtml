@model Gstinvoice.Models.ResetPassword

@{
    ViewBag.Title = "ResetPassword";
}

<h2>ResetPassword</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        @Html.LabelFor(model=>model.CurrentPassword)
    </div>
    <div>
        @Html.EditorFor(model=>model.CurrentPassword)

        @Html.ValidationMessageFor(model=>model.CurrentPassword)
       
    </div>
    <div>
        @Html.LabelFor(model => model.NewPassword)
    </div>
    <div>
        @Html.EditorFor(model => model.NewPassword)

        @Html.ValidationMessageFor(model => model.NewPassword)

    </div>
    <div>
        @Html.LabelFor(model => model.ConfirmNewPassword)
    </div>
    <div>
        @Html.EditorFor(model => model.ConfirmNewPassword)

        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)

    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>