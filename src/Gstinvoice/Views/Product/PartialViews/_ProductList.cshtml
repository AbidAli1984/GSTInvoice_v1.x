@model IEnumerable<GSTInvoiceData.Models.Items>

@{
    Layout = "";
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th><input type="checkbox">  Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Price</th>
            <th>unit</th>
            <th>Quality</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox"><a href="">  @item.Name</a></td>
                <td>@item.Description </td>
                <td>@item.IsProduct</td>
                <td>@item.UnitPrice</td>
                <td>@item.Unit</td>
                <td>@item.Quantity </td>
                <td>
                    @Html.ActionLink("Edit", "EditProduct", new { id = item.ItemId }) |
                    @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ItemId })
                </td>
            </tr>
        }
    </tbody>
</table>
