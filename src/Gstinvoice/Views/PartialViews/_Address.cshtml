@model GSTInvoiceData.Models.Address
@{
    ViewBag.Title = "_Address";
}

<html>
<head>
    <script type="text/javascript">
        function Copy() {
            var billingBuilding = document.getElementById("BillingBuilding").value;
            document.getElementById("ShippingBuilding").value = billingBuilding;

            var billingAddress = document.getElementById("BillingAddress").value;
            document.getElementById("ShippingAddress").value = billingAddress;

            var billingCity = document.getElementById("BillingCity").value;
            document.getElementById("ShippingCity").value = billingCity;

            var billingState = document.getElementById("BillingState").value;
            document.getElementById("ShippingState").value = billingState;

            var billingPinCode = document.getElementById("BillingPinCode").value;
            document.getElementById("ShippingPinCode").value = billingPinCode;

            var billingCountry = document.getElementById("BillingCountry").value;
            document.getElementById("ShippingCountry").value = billingCountry;

            var billingFax = document.getElementById("BillingFax").value;
            document.getElementById("ShippingFax").value = billingFax;
        }

    </script>
</head>
<body>
    <div id="form_sample_1" class="form-horizontal">
        <div class="col-md-6 col-sm-6">
            <div class="card card-topline-yellow">
                <div class="card-head">
                    <header>Billing Address</header>
                </div>
                <div class="card-body" id="bar-parent1">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Building
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BillingBuilding, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Street
                            </label>
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.BillingAddress, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                City
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BillingCity, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                State
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BillingState, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Pin Code
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BillingPinCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Country
                            </label>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.BillingCountry, new SelectList(new[] { "Bangladesh", "Australia", "Canada" }), "India", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Fax
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.BillingFax, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-6">
            <div class="card card-topline-yellow">
                <div class="card-head">
                    <header>Shipping Address</header>
                    <i class="fa fa-arrow-down" aria-hidden="true"></i>
                    <header style="text-transform:lowercase!important;" class="float-right"><button onclick="Copy()" id="copyButton" type="button">Copy Billing Address</button></header>
                </div>
                <div class="card-body" id="bar-parent1">

                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Building
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ShippingBuilding, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Street
                            </label>
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.ShippingAddress, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                City
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ShippingCity, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                State
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ShippingState, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Pin Code
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ShippingPinCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Country
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.ShippingCountry, new SelectList(new[] { "Bangladesh", "Australia", "Canada" }), "India", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Fax
                            </label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ShippingFax, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>



